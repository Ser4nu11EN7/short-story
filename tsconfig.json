{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "moduleResolution": "node",
        "lib": ["ES2018", "DOM"],
        "sourceMap": true,
        "strictPropertyInitialization": false,
        "noImplicitAny": false,
        "types": [
            "node",
            "electron"
        ]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
} 